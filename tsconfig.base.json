{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "removeComments": false,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2018",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rxjs-ninja/rxjs-string": ["libs/rxjs/string/src/index.ts"],
      "@rxjs-ninja/rxjs-number": ["libs/rxjs/number/src/index.ts"],
      "@rxjs-ninja/rxjs-boolean": ["libs/rxjs/boolean/src/index.ts"],
      "@rxjs-ninja/rxjs-utility": ["libs/rxjs/utility/src/index.ts"],
      "@rxjs-ninja/rxjs-array": ["libs/rxjs/array/src/index.ts"],
      "@rxjs-ninja/rxjs-random": ["libs/rxjs/random/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
